@model XMLEdition.Data.Product;
@{
    ViewData["Title"] = "Home Page";
}

<style>
    .body{
        margin-left: 40px;
        margin-right: 40px;
    }

    .myImg {
        width: 260px;
        height: 150px;
    }

    #coursesList {
        margin-left: 40px;
        margin-right: 40px;
    }

    .listElement {
        vertical-align: middle;
        height: 240px;
        font-size: 18px;
        margin-top: 15px;
        width: 280px;
        border-radius: 5px;
        padding-top: 3px;
        padding-bottom: 3px;
        padding-left: 10px;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    }

    .image-box {
        width: 250px;
        height: 140px;
    }

    a {
        text-decoration: none;
        color: black;
    }

    .courseName {
        font-size: 24px;
    }

    .raiting{
        color: gold;
    }

</style>

<partial name="/Views/Partial/Header.cshtml" />
<div class="body">
    <div id="sales">

    </div>
    <div id="filters">

    </div>
    <div id="courses">
        @{
            foreach (XMLEdition.Data.Course c in ViewBag.Courses)
            {
                string url = "https://mystudystorage.blob.core.windows.net/test/" + c.PicturePath;
                <div class="listElement">
                    <div class="image-box">
                        <img class="myImg" src="@url" alt="Title">
                    </div>
                    <div>
                        <a class="courseName" href="/Course/ViewCourse/@c.Id">@c.Name</a>
                    </div>
                    <div>
                        <div class="raiting" style="font-size: 16px;"><i class="bi bi-star-fill"></i>5</div>
                    </div>
                    <div>
                        <div>$ @c.Price</div>
                    </div>
                </div>
            }
        }
    </div>
</div>